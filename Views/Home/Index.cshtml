@model IndexViewModel
@{
    ViewData["Title"] = "Shoppify";
}

@section Breadcrumb{
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
}

<!-- HOME   Banner-->
<div id="home">
    <!-- container -->
    <div class="container">
        <!-- home wrap -->
        <div class="home-wrap">
            <!-- home slick -->
            <div id="home-slick">
                @foreach (var item in Model.Banner)
                {
                    <!-- banner -->
                    <div class="banner banner-1">
                        <img style="height:500px; width:800px" src="~/images/@item.Id/@item.Images" alt=@item.Name>
                        <div class="banner-caption text-center">
                            <h1>@item.Name</h1>
                            <h3 class="white-color font-weak">@item.Price</h3>
                            <a asp-controller="Product" asp-action="Product" asp-route-id="@item.Id" button class="primary-btn">Shop Now</a>
                        </div>
                    </div>
                    <!-- /banner -->
                }
            </div>
            <!-- /home slick -->
        </div>
        <!-- /home wrap -->
    </div>
    <!-- /container -->
</div>
<!-- /HOME -->
<!--Favorites-->
<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">Favorite Products</h2>
                </div>
            </div>
            <!-- section title -->
            @foreach (var item in Model.Favorites)
            {
                <!-- banner -->
                <div class="col-md-4 col-sm-6">
                    <a class="banner banner-1" asp-controller="Product" asp-action="Product" asp-route-id="@item.Id">
                        <img style="height:350px;width:350px;" src="~/images/@item.Id/@item.Images" alt=@item.Name>
                        <div class="banner-caption text-center">
                            <h2 class="white-color">FAVORITE</h2>
                        </div>
                    </a>
                </div>
                <!-- /banner -->
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->

<partial name="_ProductsInAuctionPartialView" model="@Model.Auction" />


<partial name="_MostMoneyAuctionPartialView" model="@Model.MoneyAuctions" />

