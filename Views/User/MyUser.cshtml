
@model MyUserViewModel

@section Breadcrumb{
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="active"><a asp-controller="User" asp-action="MyUser">My User</a></li>
}

<div class="row">
    <!-- section title -->
    <div class="col-md-12">
        <div class="section-title">
            <h2 class="title">My Account</h2>
            <div class="pull-right">
                <a class="primary-btn" asp-action="ChangePassword" asp-controller="Account" asp-route-Id="@Model.User.Id">Change Password</a>
                <a class="primary-btn" asp-action="Update" asp-controller="User" asp-route-Id="@Model.User.Id">Edit my user</a>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Username:  @Model.User.Name</h3>
                <h4 class="card-title">Name:  @Model.User.Name @Model.User.LastName</h4>
            </div>

            <div class="card-body">
                <p class="info">User information:</p>
                <p> @Model.User.Info</p>
                <p>City:  @Model.User.City</p>
                <p>Email:  @Model.User.Email</p>
                <p>Telephone:  @Model.User.PhoneNumber</p>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<div class="row">
    <!-- section title -->
    <div class="col-md-12">
        <div class="section-title">
            <h2 class="title">Notifications</h2> 
            <div class="pull-right">
                <a class="primary-btn" asp-action="All" asp-controller="Notification">All Notifications</a>
            </div>
        </div>
        <div class="card">
            @foreach (var item in Model.Notifications)
            {
                <div class="card-header">
                    <h4>@item.Text</h4>
                </div>
                <br/>
            }
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <!-- section title -->
    <div class="col-md-12">
        <div class="section-title">
            <h2 class="title">My Bank Accounts</h2>
            <div class="pull-right">
                <a class="primary-btn" asp-action="AddNewAccount" asp-controller="BankAccount">Add new Bank Account</a>
            </div>
        </div>
        <div class="card">
            @foreach (var item in Model.BankAccounts)
            {
                <div class="card-header">
                    <h4>Id: @item.AccountId</h4>
                    <h5>Titular: @item.Titular</h5>
                </div>
                <br />
            }
        </div>
    </div>
</div>

<br />
<br />
<div class="row">
    <!-- section title -->
    <div class="col-md-12">
        <div class="section-title">
            <h2 class="title">My Products</h2>
            <div class="pull-right">
                <a class="primary-btn" asp-action="Add" asp-controller="Product">Add new announcement</a>
            </div>
            <div class="product-slick-dots-2 custom-dots">

                @foreach (var item in Model.Products)
                {

                    <!-- Product Single -->
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                        <div class="product product-single">
                            <div class="product-thumb">
                                <a class="btn main-btn quick-view" asp-controller="Product" asp-action="Product" asp-route-id="@item.Id"><i class="fa fa-search-plus"></i> Quick view</a>
                                <img style="height:250px;width:280px;" src="~/images/@item.Id/@item.Images" alt=@item.Name>
                            </div>
                            <div class="product-body">
                                <h3 class="product-price">@item.Price</h3>
                                <div class="product-rating">
                                    @for (int j = 0; j < 5; j++)
                                    {
                                        if (j < item.Rating)
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-star-o empty"></i>
                                        }

                                    }
                                </div>
                                <h2 class="product-name">@item.Name</h2>
                            </div>
                            <div class="product-btns">
                                <a class="primary-btn" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <a class="primary-btn" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" asp-route-url="1">Delete</a>
                                <a class="primary-btn" asp-controller="Auction" asp-action="Add" asp-route-id="@item.Id">Auction</a>
                            </div>
                        </div>
                    </div>
                    <!-- /Product Single -->
                }
            </div>
        </div>
    </div>
</div>
