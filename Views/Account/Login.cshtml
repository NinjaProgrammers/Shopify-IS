

@model LoginViewModel


<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <form method="post" id="checkout-form" class="clearfix">
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">User Login</h3>
                    </div>
                    <div class="form-group">
                        <input class="input" placeholder="Username" asp-for="UserName" />
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <input class="input" placeholder="Password" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="pull-right">
                        <button class="primary-btn" type="submit">Login</button>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Create one</a></p>
            </form>
        </div>
    </div>
</div>
