 

@model List<Auction>

    <div class="row">
        <!-- section title -->
        <div class="col-md-12">
            <div class="section-title">
                <!--Most Money Auction cambiar nombre-->
                <h2 class="title">Most Money Auction</h2>
            </div>
        </div>
        <!-- section title -->
        @{
            foreach (var item in Model)
            {
                if (!item.Active) continue;
                var timeLeft = DateTime.Now - item.InitialTime;
                var days = timeLeft.Days;
                var hour = timeLeft.Hours;
                var min = timeLeft.Minutes;
                var sec = timeLeft.Seconds;
                <!-- Product Single -->
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="product product-single">
                        <div class="product-thumb">
                            <a asp-controller="Product" asp-action="Product" asp-route-id="@item.Product.Id" class="main-btn quick-view"><i class="fa fa-search-plus"></i> Quick view</a>
                            <img style="height:200px;width:250px;" src="~/images/@item.Product.Id/@item.Product.Images" alt="@item.Product.Name">
                        </div>
                        <div class="product-body">
                            <h3 class="product-price">@item.ActualPrice</h3>
                            <div class="product-rating">
                                @for (int j = 0; j < 5; j++)
                                {
                                    if (j < item.Product.Rating)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-star-o empty"></i>
                                    }
                                }
                            </div>
                            <h2 class="product-name"><a asp-controller="Product" asp-action="Product" asp-route-id="@item.Product.Id">@item.Product.Name</a></h2>
                            
                        </div>
                    </div>
                </div>
                <!-- /Product Single -->
            }
        }
        </div>

       