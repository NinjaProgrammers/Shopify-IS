

@model List<Auction>

<!-- section Products in Auction -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section-title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">Most Popular Auctions</h2>
                    <div class="pull-right">
                        <div class="product-slick-dots-1 custom-dots"></div>
                    </div>
                </div>
            </div>
            <!-- /section-title -->
            <!-- Product Slick -->
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div id="product-slick-1" class="product-slick">

                        @for (int i = 0; i < Math.Min(Model.Count,4); i++)
                        {
                            var item = Model[i];
                            if (!item.Active) continue;
                            var timeLeft = item.Date - DateTime.Now;
                            var days = timeLeft.Days;
                            var hour = timeLeft.Hours;
                            var min = timeLeft.Minutes;
                            var sec = timeLeft.Seconds;
                            <!-- Product Single -->
                            <div class="product product-single">
                                <div class="product-thumb">
                                    <div class="product-label">
                                        <span>Auction</span>
                                    </div>
                                    <ul class="product-countdown">
                                        @if (days > 0)
                                        {
                                            <li><span>@days D</span></li>

                                        }

                                        <li><span>@hour H</span></li>
                                        <li><span>@min M</span></li>
                                        <li><span>@sec S</span></li>
                                    </ul>
                                    <a asp-controller="Product" asp-action="Product" asp-route-id="@item.ProductId" button class="main-btn quick-view"><i class="fa fa-search-plus"></i> Quick view</a>
                                    <img style="height:250px;width:360px;" src="~/images/@item.ProductId/@item.Product.Images" alt="@item.Product.Name">
                                </div>
                                <div class="product-body">
                                    <h3 class="product-price">$@item.ActualPrice</h3>
                                    <div class="product-rating">
                                        @for (int j = 0; j < 5; j++)
                                        {
                                            if (j < item.Product.Rating)
                                            {
                                                <i class="fa fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-star-o empty"></i>
                                            }

                                        }
                                    </div>
                                    <h2 class="product-name"><a asp-controller="Product" asp-action="Product" asp-route-id="@item.ProductId">@item.Product.Name</a></h2>
                                    <div class="product-btns">
                                        <div class="center-block">
                                            <a asp-action="Auction" asp-controller="Auction" asp-route-id="@item.Id" class="btn primary-btn"><i class="fa fa-bank"></i>Join Now</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Product Single -->
                        }
                    </div>
                </div>
            </div>
            <!-- /Product Slick -->
        </div>
        <!-- /row -->        
    </div>
    <!-- /container -->
</div>
<!-- /section -->
