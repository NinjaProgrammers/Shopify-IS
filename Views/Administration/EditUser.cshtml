@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}
<!--Poner los valores dentro de los input-->
    <!-- section -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <form asp-controller="Administration" asp-action="EditUser" method="post" class="center-block" id="checkout-form" class="clearfix" method="post">
                        <div class="billing-details">
                            <div class="section-title">
                                <h3 class="title">Edit User</h3>
                            </div>
                            <div class="form-group">
                                <input class="input" placeholder="Username" asp-for="UserName" />
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group">
                                <input class="input" placeholder="Name" asp-for="Name" />
                                <span asp-validation-for=Name></span>
                            </div>
                            <div class="form-group">
                                <input class="input" placeholder="Last Name" asp-for="LastName" />
                                <span asp-validation-for=LastName></span>
                            </div>
                            <div class="form-group">
                                <input class="input" placeholder="Info" asp-for="Info" />
                                <span asp-validation-for=Info></span>
                            </div>
                            <div class="form-group">
                                <input class="input" placeholder="Email" asp-for="Email" />
                                <span asp-validation-for=Email></span>
                            </div>
                            <div class="form-group">
                                <input class="input" placeholder="Telephone" asp-for="Telephone" />
                                <span asp-validation-for=Telephone></span>
                            </div>
                            <div class="form-group">
                                <input class="input" placeholder="City" asp-for="City" />
                                <span asp-validation-for=City></span>
                            </div>
                            <div class="pull-right">
                                <button class="primary-btn" type="submit">Update</button>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card-header">
                    <h1>Roles</h1>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Count() > 0)
                    {
                        <div class="card-body">
                            @foreach (var role in Model.Roles)
                            {
                                <h6>@role</h6>
                            }
                        </div>
                    }
                    else
                    {
                        <h6>Nothing at the moment</h6>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="ManageUserRoles" asp-route-Id="@Model.Id" class="main-btn">
                        Manage Roles
                    </a>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card-header">
                    <h1>Claims</h1>
                </div>
                <div class="card-body">
                    @if (Model.Claims.Count() > 0)
                    {
                        <div class="card-body">
                            @foreach (var claim in Model.Claims)
                            {
                                <h6>@claim</h6>
                            }
                        </div>
                    }
                    else
                    {
                        <p>Nothing at the moment</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="ManageUserClaims" asp-route-Id="@Model.Id" class="main-btn">
                        Manage Claims
                    </a>
                </div>
            </div>
        </div>

<br />
