


@model CreateRoleViewModel

@{
    ViewBag.Title = "Create Role";
}

<div class="section container align-middle">
    <div class="col-form-label">
        <div class="section-title">
            <h3>Create Role</h3>
        </div>
        <form  asp-controller="Administration" asp-action="CreateRole" method="post" class="center-block">
            <div class="form-group row rounded">
                <label asp-for="RoleName">Role Name</label>
                <input asp-for="RoleName" />
                <span asp-validation-for="RoleName"></span>
                @{ 
                    if (ViewBag.RoleName != null)
                    {
                        <p class="text-danger">@ViewBag.RoleName</p>
                    }
                }
            </div>            
            <div>
                <button class="badge-pill" type="submit">Create Role</button>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>
