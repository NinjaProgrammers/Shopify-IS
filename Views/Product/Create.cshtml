
@model ProductCreateViewModel

   
    <div class="section container align-middle">
        <div class="col-form-label">
            <div class="section-title">
                <h3>Insert your Announcement</h3>
            </div>
            <form enctype="multipart/form-data" asp-controller="Product" asp-action="Create" method="post" class="center-block">
                <div class="form-group row rounded">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" />
                    <span asp-validation-for=Price></span>

                </div>  
                <div class="form-group row">
                    <label asp-for="Ammount"></label>
                    <input asp-for="Ammount" />
                    <span asp-validation-for="Ammount"></span>

                </div>
                <div class="form-group row">
                    <label asp-for="Category"></label>
                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()"></select>

                </div>
                <div class="form-group row">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" />
                </div>
                <div class="form-group row">
                    <div class="custom-file">
                        <label asp-for="Images" class="custom-file-label">Choose File...</label>
                        <input multiple asp-for="Images" class="form-control custom-file-input" />
                    </div>
                </div> 
                <div>
                    <button class="badge-pill" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>
