

@section Breadcrumb{
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Product" asp-action="All">Product</a></li>
    <li class="active">Add</li>
}

@model ProductCreateViewModel


<div class="section container align-middle">
    <div class="col-form-label">
        <div class="section-title">
            <h3 class="title">Insert Product</h3>
        </div>
        <form enctype="multipart/form-data" asp-controller="Product" asp-action="Add" method="post" class="center-block clearfix">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="input" placeholder="Name" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input class="input" placeholder="Price" asp-for="Price" />
                <span asp-validation-for=Price></span>

            </div>
            <div class="form-group">
                <label asp-for="Ammount"></label>
                <input class="input" placeholder="Ammount" asp-for="Ammount" />
                <span asp-validation-for="Ammount"></span>

            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <select class="input" asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="input" placeholder="Description" asp-for="Description" />
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label asp-for="Images" class="custom-file-label">Choose File...</label>
                    <input placeholder="File" multiple asp-for="Images" class="input form-control custom-file-input" />
                </div>
            </div>
            <input type="hidden" asp-for="Username" value="@User.Identity.Name" />
            <div>
                <button class="primary-btn" type="submit">Create</button>
            </div>



        </form>

    </div>
</div>
